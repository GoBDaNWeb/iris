mixin sortBy(data)
	- attrMin = data.attrMin || ''
	- attrMax = data.attrMax || ''
	div(class="sort-by")
		span(class="sort-by__ttl")= data.title
		each item in data.items
			div(class="sort-by__item")
				span= item.text
				input(name=item.name type="radio" value=item.value id=item.idMax)&attributes(item.attrMax)
				label(for=item.idMax ) 
					<svg width="22" height="24" fill="none" xmlns="http://www.w3.org/2000/svg" class="icon icon--stroke icon-sort"><path d="M1 12.973c5.178.782 9.23 4.885 9.962 10.09l.038.27.038-.27c.733-5.205 4.784-9.308 9.962-10.09m-10 9.713V0" stroke=""/></svg>
