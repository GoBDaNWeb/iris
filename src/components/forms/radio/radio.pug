mixin radioBase(data)
	- атрибуты
	- attr = data.attr || ''

	- fieldName = data.fieldName

	div(class="form-field" data=data.classRow)
		if (data.title)
			span(class="field-title")= data.title
		each item in data.listRadio
			
			div(class="check__wrap")
				input(
					type="radio" 
					id=item.id
					class="radio-base" class=data.dopClass
					name=typeof data.name === "undefined" ? item.type: data.name
					value=typeof item.value === "undefined" ? "" : item.value )&attributes(item.attr)
				label(for=item.id)
					span
					span= item.labelText

//-
	
	+radioBase({
		name:'radio-name',
		title: 'Что вы хотите получать?',
		listRadio: [
			{
				id: 'radio-1',
				value:'radio-1',
				labelText: 'Напоминания из календаря приёма'
			},
			{
				id: 'radio-2',
				value:'radio-2',
				labelText: 'Напоминания из календаря приёма'
			},
		]
	})

mixin radioListTag(data)
	- attr = data.attr || ''
	div(class="list-tag-radio")
		each item in data.items
			div(class="input-button-green")
				input(name=data.name type="radio" value=item.value id=item.id)&attributes(item.attr)
				label(for=item.id )
					span= item.text
//-				
	+radioListTag({
		name: 'sort-price',
		items:[
			{
				id: 'ascending-price',
