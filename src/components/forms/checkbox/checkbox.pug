mixin checkboxButton(data)
	- attr = data.attr || ''

	div(class="checkbox-button")
		each item in data.items
			div(class="input-button-green")
				input(name=data.name type="checkbox" value=item.value id=item.id)&attributes(item.attr)
				label(for=item.id )
					span= item.text

mixin checkboxSwitch(data)
	- attr = data.attr || ''
	div(class="form-field" class=data.dopClass)
		if(data.fieldTitle)
			span(class="field-title")= data.fieldTitle
		each item in data.items
			label(class="checkbox-ios")
				input(type="checkbox" checked)&attributes(item.attr)
				span(class="checkbox-ios-switch")

