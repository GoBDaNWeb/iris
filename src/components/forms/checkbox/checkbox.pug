mixin checkboxBase(data)
	- атрибуты
	- attr = data.attr || ''

	- fieldName = data.fieldName

	div(class="form-field" data=data.classRow)
		if (data.title)
			span(class="field-title")= data.title
		each item in data.listCheckbox
			
			div(class="check__wrap")
				

				input(
					type="checkbox" 
					id=item.id
					class="checkbox-base" class=data.dopClass
					name=typeof data.name === "undefined" ? item.type: data.name
					value=typeof item.value === "undefined" ? "" : item.value )&attributes(attr)
				label(for=item.id)
					span
						<svg width="11" height="8" fill="none" xmlns="http://www.w3.org/2000/svg" class="icon"><path d="M1 3.5 4.5 7 10 1" stroke="#396542"/></svg>
					span= item.labelText

